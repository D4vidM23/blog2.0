mixin articleForm(article, buttonText, saveUrl, cancelUrl, deleteUrl)



    form(action=saveUrl method='post')
        div.input-container.wide
            label(for='title').form-label Title
            input(type='text' name='title' id='title' required=true placeholder='enter blog title...' value= article.title)

        div.input-container.super-wide
            label(for='intro').form-label Intro
            input(type='text' name='intro' id='intro' required=true placeholder='reel em in...' value= article.intro)

        div.input-container.super-wide
            label(for='image_url').form-label Image URL
            input(type='text' name='image_url' id='image_url' required=true value= article.image_url)

        div.input-container
            label(for='body').form-label
            textarea(name='body' id='body' rows=20 cols=100 placeholder='Once upon a time in a clearing in a magical forest...') #{article.body}

        a.button(href=cancelUrl) Cancel
        if (deleteUrl)
            a.button(href=deleteUrl) Delete
        button.button.primary(type='submit') #{buttonText}
